<%#= form_for(@message) do |f| %>
<%= form_for(@message  , html: { class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
    
    <div class="form-group">
        <label for="name" class="col-sm-1 control-label">名前：</label>
        <div class="col-sm-11">
            <%= f.text_field :name ,class:"form-control" , id: "name" %>
        </div>
    </div>
    <div class="form-group">
        <label for="body" class="col-sm-1 control-label">内容：</label>
        <div class="col-sm-11">
            <%= f.text_area :body, class:"form-control", rows:"10" , id: "body" %>
        </div>
    </div>
    <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit class: "btn btn-sm btn-primar" %>
    </div>
<% end %>


<style type="text/css">
    div.form-group { padding-bottom:10px; }
</style>

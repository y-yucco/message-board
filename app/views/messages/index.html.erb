<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info">
                <%= message.name %>
            </span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
    
    <div class="form-group">
        <label for="name" class="col-sm-1 control-label">名前：</label>
        <div class="col-sm-11">
            <%= f.text_field :name ,class:"form-horizontal" %>
        </div>
    </div>
    <div class="form-group">
        <label for="body" class="col-sm-1 control-label">内容：</label>
        <div class="col-sm-11">
            <%= f.text_area :body, class:"form-horizontal col-sm-7", rows:"10" %>
        </div>
    </div>
    <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit class: "btn btn-sm btn-primar" %>
    </div>
<% end %>


<style type="text/css">
    div.form-group { padding-bottom:10px; }
</style>